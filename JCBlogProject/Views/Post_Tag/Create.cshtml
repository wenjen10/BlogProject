@model JCBlogProject.Models.Post_Tag

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Post_Tag</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <h2>Create a Post</h2>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <h3>Pick a Genre</h3>
                        <label asp-for="Posts.GenreId" class="control-label">Genre</label>
                        <select name="GenreId">
                            <option value="1">Politics</option>
                            <option value="2">Programming</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <h3>Write a Title</h3>
                        <label asp-for="Posts.Title" class="control-label"></label>
                        <input asp-for="Posts.Title" class="form-control" />
                        <span asp-validation-for="Posts.Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <h3>Your Name</h3>
                        <label asp-for="Posts.Author" class="control-label"></label>
                        <input asp-for="Posts.Author" class="form-control" />
                        <span asp-validation-for="Posts.Author" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <h3>Your Post</h3>
                        <label asp-for="Posts.Content" class="control-label"></label>
                        <textarea asp-for="Posts.Content" class="form-control" style="width: 300px; height: 150px;"></textarea>
                        <span asp-validation-for="Posts.Content" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="Posts.PostDate" type="hidden" value="@System.DateTime.Now" class="form-control" />
                    </div>

                    <h3>Select your Posts tags</h3>
                    <div class="form-group">
                        <label asp-for="Id" class="control-label">First Tag</label>
                        <input asp-for="PostId" type="hidden" value="@ViewBag.PostId" class="form-control" />
                        <select name="TagId">
                            <option value="">No Tag</option>
                            <option value="1">greeting</option>
                            <option value="2">Salutation</option>
                            <option value="3">yeet</option>
                        </select>
                    </div>



