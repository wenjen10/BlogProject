@model JCBlogProject.Models.Post
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <title>Delete a Post</title>
</head>
<body>

    <h1>Are you sure you want to delete this Post?</h1>
    <div>
        <h2>Post: </h2>
        <h3>Title: @Model.Title</h3>
        <h4>Author: @Model.Author</h4>
        <dl class="dl-horizontal">
            <dt>
                <span>@Html.DisplayNameFor(model => model.Content):</span>
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Content)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" value="@Model.Id" asp-for="Id" />
            @*<input type="hidden" value="" asp-for="ProductId" />*@
            <input type="submit" value="Delete" class="btn btn-default" /> |
        </form>
        <a href="~/Post/Index">Return to Posts</a>
    </div>
</body>
</html>