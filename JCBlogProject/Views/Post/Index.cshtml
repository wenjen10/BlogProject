@model IEnumerable<JCBlogProject.Models.Post>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/CSS/StyleSheet.css">
    <meta name="viewport" content="width=device-width" />
    <title>JC Blog Site</title>
</head>
<body>
    <a href="~/Genre/Index/">View Posts by Genre</a>
    <a href="~/Tag/Index/">View POsts by Tag</a>
    <h1>Post List</h1>
    @foreach (var Post in Model)
    {
    <h2><a href="~/Post/Index/@Post.Id">@Post.Title</a></h2>
        <h3>@Post.Author</h3>
        <p>@Post.Content</p>
        @Post.PostDate
        <hr />
    }

</body>
</html>